<body class="container">

    <%- include('template/cuerpo') %>

    <div class="col-xs-8 col-xs-offset-2">
        <h2 class="text-center">Escribe un nuevo producto</h2>

        <form method="post">
            <div class="form-group">
                <label for="titulo">Titulo: </label>
                <input 
                type="text" 
                name="titulo" 
                id="titulo" 
                class="form-control" 
                placeholder="Ingresa un nuevo titulo" 
                required>
            </div>
    </div>

    <div class="form-group">
        <label for="precio">Precio del producto</label>
        <input 
        type="number"
        name="precio"
        id="precio"
        class="form-control"
        placeholder="Ingrese el precio"
        required>
    </div>

    <div class="form-group">
        <label for="imagen">URL de la imagen del producto</label>
        <input 
        accept="url/*"
        type="url"
        name="imagen"
        id="imagen"
        class="form-control"
        required>
    </div>

    <div class="form-gorup">
        <input type="submit" value="Subir" class="btn btn-primary">
    </div>

    </form>

</body>
