<%- include('partials/head', {tituloWeb: 'New Product'}) %>

<body>
    
<%- include('partials/navigation')  %> 

<h1 style="text-align: center; margin-top: 2em;  text-shadow: 0.1em 0.1em 0.2em black;">Add New Product</h1>

<div class="container" style="margin-top: 5%;">
    <form action="/api/newProduct" method="post" class="card card-body">
        <div class="form-group" style="margin-bottom: 1em;">
            <label for="title">Ttle</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="Nombre del producto" autofocus required>
        </div>
        <div class="form-group" style="margin-bottom: 1em;">
            <label for="title">Price</label>
            <input type="number" class="form-control" name="price" id="price" placeholder="Precio del producto" required>
        </div>
        <div class="form-group" style="margin-bottom: 1em;">
            <label for="title">URL</label>
            <input accept="url/*" type="img" class="form-control" name="img" id="img" placeholder="URL de la imagen producto" required>
        </div>
        <input type="submit" value="save product" class="btn btn-primary">
    </form>
</div>

</body>